<% include ../partials/header %>

<div class="container">
    <div class="row">
        <h1 style="text-align: center;">Edit <%= thing.name %></h1>
        
        <div style="width: 30%; margin: 25px auto;">
            <form action="/things/<%= thing._id %>/?_method=PUT" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="thing[name]" value="<%= thing.name %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="thing[image_link]" value="<%= thing.image_link %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="thing[description]" value="<%= thing.description %>">
                </div>
                <div class="form-group">
                    <button class="btn btn-large btn-primary btn-block">Update Thing</button>
                </div>
            </form>
            
            <a href="/things">Go Back</a>
        </div>
    </div>
</div>


<% include ../partials/footer %>
